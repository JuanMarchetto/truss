{
  "name": "truss-validator",
  "displayName": "Truss - GitHub Actions Validator",
  "description": "Real-time GitHub Actions workflow validation powered by Truss LSP",
  "version": "0.1.0",
  "publisher": "juanmarchetto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JuanMarchetto/truss"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "github-actions",
    "yaml",
    "linter",
    "validation",
    "ci-cd"
  ],
  "activationEvents": [
    "workspaceContains:**/.github/workflows/*.yml",
    "workspaceContains:**/.github/workflows/*.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Truss",
      "properties": {
        "truss.lspPath": {
          "type": "string",
          "default": "truss-lsp",
          "description": "Path to the truss-lsp binary. Defaults to 'truss-lsp' (must be on PATH)."
        },
        "truss.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Truss language server."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
